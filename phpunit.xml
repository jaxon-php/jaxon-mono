<?xml version="1.0"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" bootstrap="vendor/autoload.php" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd">
  <listeners>
    <listener class="Jaxon\Tests\JaxonTestListener" />
  </listeners>
  <coverage processUncoveredFiles="true">
    <include>
      <directory suffix=".php">jaxon-core/src</directory>
    </include>
    <report>
      <clover outputFile="build/logs/clover.xml"/>
      <html outputDirectory="build/logs/html" lowUpperBound="35" highLowerBound="70"/>
    </report>
  </coverage>
  <testsuites>
    <testsuite name="Jaxon Core">
      <directory>jaxon-core/tests</directory>
    </testsuite>
    <testsuite name="Jaxon Annotations">
      <directory>jaxon-annotations/tests</directory>
    </testsuite>
  </testsuites>
  <logging/>
</phpunit>
