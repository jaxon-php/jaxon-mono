<?xml version="1.0"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" bootstrap="vendor/autoload.php" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd">
  <listeners>
    <listener class="Jaxon\Tests\JaxonTestListener" />
  </listeners>

  <coverage processUncoveredFiles="true">
    <include>
      <directory suffix=".php">jaxon-config/src</directory>
      <directory suffix=".php">jaxon-utils/src</directory>
      <directory suffix=".php">jaxon-core/src</directory>
      <directory suffix=".php">jaxon-attributes/src</directory>
      <directory suffix=".php">jaxon-annotations/src</directory>
      <directory suffix=".php">jaxon-dialogs/src</directory>
      <directory suffix=".php">jaxon-upload/src</directory>
    </include>
    <report>
      <clover outputFile="build/logs/clover.xml"/>
      <html outputDirectory="build/logs/html" lowUpperBound="35" highLowerBound="70"/>
    </report>
  </coverage>

  <testsuites>
    <testsuite name="Jaxon Config">
      <directory>jaxon-config/tests</directory>
    </testsuite>
    <testsuite name="Jaxon Utils">
      <directory>jaxon-utils/tests</directory>
    </testsuite>
    <testsuite name="Jaxon Core">
      <directory>jaxon-core/tests</directory>
    </testsuite>
    <testsuite name="Jaxon Attributes">
      <directory>jaxon-attributes/tests</directory>
    </testsuite>
    <testsuite name="Jaxon Annotations">
      <directory>jaxon-annotations/tests</directory>
    </testsuite>
    <testsuite name="Jaxon Dialogs">
      <directory>jaxon-dialogs/tests</directory>
    </testsuite>
    <testsuite name="Jaxon Upload">
      <directory>jaxon-upload/tests</directory>
    </testsuite>
  </testsuites>
  <logging/>
</phpunit>
